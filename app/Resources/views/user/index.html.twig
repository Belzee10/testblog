{% extends '::layout.html.twig' %}
{% block title %}{{ parent() }} | List of Users{% endblock %}

{% block content %}
    <div>
        <a class="btn btn-danger" href="{{ path('user_new') }}">Create a new Author</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td class="text-center">
                    <a class="actions edit" href="{{ path('user_edit', { 'id': user.id }) }}">
                        Edit
                    </a>
                    <a class="actions del delete" data-pathdelete="{{ path('user_delete', {'id': user.id}) }}">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
